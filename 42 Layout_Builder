
LayoutBuilder(
        builder: (BuildContext context,BoxConstraints constraints){
          if(constraints.maxWidth>600){
            return Container(
              width: 400,
              height: 400,
              color: Colors.blue,
            );
          }
          else{
            return Container(
              width: 200,
              height: 200,
              color: Colors.green,
            );
          }

        }
      )
